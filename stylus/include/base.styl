html
    font-size: 100%
    height: 100%
    
*,
*::before,
*::after
    box-sizing: border-box

body 
    height: 100%
    font-family: Lato
    font-size: 1rem
    font-weight: 400
    line-height: 1.5
    text-align: left
    color: #666
    padding-top: $header-padding
    
h1, h2, h3, h4, h5, h6
    margin-top: 0
    margin-bottom: .5rem
    font-weight: 500
    line-height: 1.2
    letter-spacing: 1px
    color: #555
    
p
    margin-top: 0
    margin-bottom: 1rem
    
ul, li
    list-style-type: none
    padding: 0
    margin: 0
    
input,
button,
select,
textarea
    margin: 0
    border-radius: 0
    
input, select, button
    &:focus
        outline: 0

#content
    padding-top: 1rem

.hide
    opacity: 0
    transition: all 1s ease-in-out

.hidden
    display: none

button.add
    background-image: url(/static/img/plus.svg);
    background-repeat: no-repeat;
    background-color: transparent;
    border: none;
    height: 2rem;
    width: 2rem;
    padding: 0px;

button.edit
    background-image: url(/static/img/edit.svg);
    background-repeat: no-repeat;
    background-color: transparent;
    border: none;
    height: 2rem;
    width: 2rem;
    padding: 0px;


button.upload
    position: relative
    overflow: hidden

    &.has-spinner
        color: transparent

    &:hover 
        cursor: pointer

    span
        &:hover
            cursor: pointer

    input[type=file]
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        opacity: 0
        margin: 0

        &:hover
            cursor: pointer
