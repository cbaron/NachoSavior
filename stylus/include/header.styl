header
    background-color: white
    box-shadow: 0 1px 6px rgba(0, 0, 0, 0.35)
    height: $headerPadding
    left: 0
    position: fixed
    top: 0
    width: 100%
    z-index: 100

    ul, li
        display: inline-block
    ul
        float: left
        width: 33%
    li
        font-size: 1rem
        line-height: 3rem
        margin: 0rem 1rem

    span
        &:nth-child(2)
            width: 33%
            display: inline-block
            text-align: center
            line-height: 3rem
            font-size: 1.5rem

    img
        display: inline
        height: 2rem
        float: right
        margin-right: 1rem
        margin-top: .5rem            
